---
import Layout from '../layouts/Layout.astro'
import Form from '../components/Form'
import Logo from '../components/Logo.astro'
---

<Layout title="AI Background Removal">
  <div>
    <div class="px-6 pt-6 lg:px-8">
      <div>
        <nav class="flex h-9 items-center justify-between" aria-label="Global">
          <div class="flex lg:min-w-0 lg:flex-1" aria-label="Global">
            <Logo />
          </div>
        </nav>
      </div>
    </div>
    <main>
      <div class="relative px-6 lg:px-8">
        <div class="mx-auto max-w-3xl pt-20 pb-32 sm:pt-32 sm:pb-40">
          <div>
            <div>
              <h1
                class="text-4xl font-bold tracking-tight sm:text-center sm:text-6xl"
              >
                AI Background Removal
              </h1>
              <p
                class="mt-6 mb-6 text-lg leading-8 text-gray-600 sm:text-center"
              >
                Check out the source code on <a
                  href="https://github.com/Charca/astro-stable-diffusion"
                  target="_blank"
                  rel="noopener">GitHub</a
                >. Powered by <a
                  href="https://replicate.com/stability-ai/stable-diffusion"
                  target="_blank"
                  rel="noopener">Replicate</a
                >, <a href="https://astro.build" target="_blank" rel="noopener"
                  >Astro</a
                >, <a
                  href="https://preactjs.com/"
                  target="_blank"
                  rel="noopener">Preact</a
                >, and <a
                  href="https://tailwindcss.com/"
                  target="_blank"
                  rel="noopener">Tailwind</a
                >. <br /> Demo by <a
                  href="https://twitter.com/charca"
                  target="_blank"
                  rel="noopener">Maxi Ferreira</a
                >.
              </p>

              <Form client:load />
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  a {
    color: rgb(79 70 229 / var(--tw-text-opacity));
  }

  a:hover {
    color: rgb(99 102 241 / var(--tw-text-opacity));
  }
</style>
